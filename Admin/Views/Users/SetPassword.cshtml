@model SetPasswordViewModel
@{
    ViewData["Title"] = "Set password";
}


<!-- Main Wrapper -->
<div class="content-wrapper">

    <!-- Page Title -->

    <div class="page-title">
        <span class="title-data" data-main='@(ViewData["Main"])'>@ViewData["Title"]</span>
    </div>


    <!-- Main Cards  -->
    <div class="row mt-4">
        <!-- normal card -->
        <div class="col-lg-12 d-flex">
            <div class="card main-card w-100">
                <div class="card-body">
                    <form asp-action="SetPassword">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="NewPassword" class="col-xl-2 col-lg-3 col-form-label"></label>
                            <div class="col-xl-10 col-lg-9">
                                <input asp-for="NewPassword" class="form-control"/>
                                <small>
                                    <span asp-validation-for="NewPassword" class="form-text text-danger"></span>
                                </small>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ConfirmPassword" class="col-xl-2 col-lg-3 col-form-label"></label>
                            <div class="col-xl-10 col-lg-9">
                                <input asp-for="ConfirmPassword" class="form-control"/>
                                <small>
                                    <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
                                </small>
                            </div>
                        </div>
                        @Html.HiddenFor(e => e.Id)
                        <div class="col-12 float-right d-block text-right">
                            <div class="form-group">
                                <input type="submit" class="btn my_btn red_btn" value="Save"/>
                                <a asp-action="Index" class="cancel btn ml-2">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>

</div>

@section Scripts {


}