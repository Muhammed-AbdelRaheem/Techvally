@model ProductVM

@{
    ViewData["Title"] = _localizer["Edit"];
    ViewData["Main"] = _localizer["Product"];
}
<div class="content-wrapper">
    <div class="page-title">
        <span class="title-data" data-main='@(ViewData["Main"])'>@ViewData["Title"]</span>
    </div>
    <div class="card main-card w-100">
       <div class="card-body">
            <form asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(e=>e.Id)

                <div class="form-group row">
                    <label asp-for="CategoryId" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <select asp-for="CategoryId" asp-items="ViewBag.category" class="form-control">
                            <option value="">None</option>
                        </select>
                        <small><span asp-validation-for="CategoryId" class="form-text text-danger"></span></small>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Title" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="Title" class="form-control" />
                        <small><span asp-validation-for="Title" class="form-text text-danger"></span></small>
                    </div>
                </div>


                <div class="form-group row">
                    <label asp-for="Image" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        @Html.EditorFor(model => model.Image)
                        <small><span asp-validation-for="Image" class="form-text text-danger"></span></small>
                    </div>
                </div>



                <div class="form-group row">
                    <label asp-for="Description" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        @Html.EditorFor(model => model.Description)
                        <small><span asp-validation-for="Description" class="form-text text-danger"></span></small>
                    </div>
                </div>



                <div class="form-group row">
                    <label asp-for="Content" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        @Html.EditorFor(model => model.Content)
                        <small><span asp-validation-for="Content" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Spacification" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        @Html.EditorFor(model => model.Spacification)
                        <small><span asp-validation-for="Spacification" class="form-text text-danger"></span></small>
                    </div>
                </div>


                <div class="form-group row">
                    <label asp-for="DisplayOrder" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="DisplayOrder" type="text" class="touchspin touchspin-sm" value="@Model.DisplayOrder">
                        <small><span asp-validation-for="DisplayOrder" class="form-text text-danger"></span></small>
                    </div>
                </div>

                <div class="form-group  row">
                    <label asp-for="Hidden" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                            <input type="checkbox" asp-for="Hidden" class="custom-control-input">
                            <span class="custom-control-label"></span>
                            <label class="custom-control-description" asp-for="Hidden"></label>
                        </label>
                    </div>
                </div>
                <input type="hidden" asp-for="CreatedOnUtc" value="@Model.CreatedOnUtc" />
                <input type="hidden" asp-for="UpdatedOnUtc" value="@Extantion.AddUtcTime()" />

                <div class="d-flex justify-content-end">
                    <input type="submit" class="btn btn-primary" value="@_localizer["Save"]" />
                    <a asp-action="Index" class="btn btn-secondary d-inline-block ml-3">@_localizer["Cancel"]</a>
                </div>
            </form>
       </div>
    </div>
</div>