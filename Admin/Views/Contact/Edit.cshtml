@model ContactVm

@{
    ViewData["Title"] = _localizer["Edit"];
    ViewData["Main"] = _localizer["Contact"];
}



@if (User.IsInRole("Admin"))
{




    <div class="content-wrapper">
        <div class="page-title">
            <span class="title-data" data-main='@(ViewData["Main"])'>@ViewData["Title"]</span>
        </div>
        <div class="card main-card w-100">
            <div class="card-body">
                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group row">
                        <label asp-for="Title" class="col-xl-2 col-lg-3 col-form-label"></label>
                        <div class="col-xl-10 col-lg-9">
                            <input asp-for="Title" class="form-control" />
                            <small><span asp-validation-for="Title" class="form-text text-danger"></span></small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Fax" class="col-xl-2 col-lg-3 col-form-label"></label>
                        <div class="col-xl-10 col-lg-9">
                            <input asp-for="Fax" class="form-control" type="number" />
                            <small><span asp-validation-for="Fax" class="form-text text-danger"></span></small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Tel" class="col-xl-2 col-lg-3 col-form-label"></label>
                        <div class="col-xl-10 col-lg-9">
                            <input asp-for="Tel" class="form-control"type="number" />
                            <small><span asp-validation-for="Tel" class="form-text text-danger"></span></small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Address" class="col-xl-2 col-lg-3 col-form-label"></label>
                        <div class="col-xl-10 col-lg-9">
                            <input asp-for="Address" class="form-control" />
                            <small><span asp-validation-for="Address" class="form-text text-danger"></span></small>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label asp-for="DisplayOrder" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="DisplayOrder" type="text" class="touchspin touchspin-sm" >
                            <small><span asp-validation-for="DisplayOrder" class="form-text text-danger"></span></small>
                        </div>
                    </div>

                    <div class="form-group  row">
                        <label asp-for="Hidden" class="col-xl-2 col-lg-3 col-form-label"></label>
                        <div class="col-xl-10 col-lg-9">
                            <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                <input type="checkbox" asp-for="Hidden" class="custom-control-input">
                                <span class="custom-control-label"></span>
                                <label class="custom-control-description" asp-for="Hidden"></label>
                            </label>
                        </div>
                    </div>
                    <input type="hidden" asp-for="CreatedOnUtc" value="@Model.CreatedOnUtc" />
                    <input type="hidden" asp-for="UpdatedOnUtc" value="@Extantion.AddUtcTime()" />

                    <div class="d-flex justify-content-end">
                        <input type="submit" class="btn btn-primary" value="@_localizer["Save"]" />
                        <a asp-action="Index" class="btn btn-secondary d-inline-block ml-3">@_localizer["Cancel"]</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


}




@* _Validation for client side*@


    @{
        <partial name="_ValidationScriptsPartial" />
    }

    







