@model IEnumerable<Configuration>

@{

    ViewData["Title"] = "Configurations";
}


<div class="content-wrapper">
    <div class="page-title">
        <span class="title-data" data-main='@(ViewData["Main"])'>@ViewData["Title"]</span>
    </div>
    <div class="card main-card w-100">

        <div class="card-body">
            <a asp-action="Create" class="btn btn-primary my_btn btn-create btn-sm">
                <i class="fa fa-plus" aria-hidden="true"></i>
                <span>
                    Create New
                </span>
            </a>
            <table class="table table-striped table-bordered datatable" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ArName)
                        </th>


                        <th class="d-none">
                            @Html.DisplayNameFor(model => model.Id)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Facebook)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Twitter)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Youtube)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Instagram)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tiktok)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Snapchat)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SocialPicture)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DisplayOrder)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hidden)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ArName)
                            </td>


                            <td class="d-none">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                <a href="@Html.DisplayFor(modelItem => item.Facebook)" target="_blank"> @Html.DisplayFor(modelItem => item.Facebook)</a>
                            </td>

                            <td>
                                <a href="@Html.DisplayFor(modelItem => item.Twitter)" target="_blank"> @Html.DisplayFor(modelItem => item.Twitter)</a>
                            </td>
                            <td>
                                <a href="@Html.DisplayFor(modelItem => item.Youtube)" target="_blank"> @Html.DisplayFor(modelItem => item.Youtube)</a>
                            </td>
                            <td>
                                <a href="@Html.DisplayFor(modelItem => item.Instagram)" target="_blank"> @Html.DisplayFor(modelItem => item.Instagram)</a>
                            </td>
                            <td>
                                <a href="@Html.DisplayFor(modelItem => item.Tiktok)" target="_blank"> @Html.DisplayFor(modelItem => item.Tiktok)</a>
                            </td>
                            <td>
                                <a href="@Html.DisplayFor(modelItem => item.Snapchat)" target="_blank"> @Html.DisplayFor(modelItem => item.Snapchat)</a>
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.SocialPicture)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DisplayOrder)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hidden)
                            </td>
                            <td>
                                <div class="dropdown data-table-dropdown">
                                    <button type="button" class="btn btn-sm btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">
                                        Action
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        @*<a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i> Details </a>*@
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"> Edit </a>
                                        <a class="dropdown-item" onclick='DeleteRow("/@Html.Language()/@Html.Controller()/JsonDelete/@item.Id")'>Delete </a>
                                        <a class="dropdown-item Duplicate" onclick='DuplicateRow("/@Html.Language()/@Html.Controller()/JsonDuplicate/@item.Id")'> Duplicate </a>

                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
