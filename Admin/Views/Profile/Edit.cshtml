@model ProfileVM

@{
    ViewData["Title"] = _localizer["Edit"];
    ViewData["Main"] = _localizer["Profile"];
}
<div class="content-wrapper">
    <div class="page-title">
        <span class="title-data" data-main='@(ViewData["Main"])'>@ViewData["Title"]</span>
    </div>
    <div class="card main-card w-100">
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(e => e.Id)

              

                <div class="form-group row">
                    <label asp-for="HPTitle" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="HPTitle" class="form-control" />
                        <small><span asp-validation-for="HPTitle" class="form-text text-danger"></span></small>
                    </div>
                </div>


                <div class="form-group row">
                    <label asp-for="HPImage" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        @Html.EditorFor(model => model.HPImage)
                        <small><span asp-validation-for="HPImage" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DImage" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        @Html.EditorFor(model => model.DImage)
                        <small><span asp-validation-for="DImage" class="form-text text-danger"></span></small>
                    </div>
                </div>


                <div class="form-group row">
                    <label asp-for="Description" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        @Html.EditorFor(model => model.Description)
                        <small><span asp-validation-for="Description" class="form-text text-danger"></span></small>
                    </div>
                </div>



                <div class="form-group  row">
                    <label asp-for="Hidden" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                            <input type="checkbox" asp-for="Hidden" class="custom-control-input">
                            <span class="custom-control-label"></span>
                            <label class="custom-control-description" asp-for="Hidden"></label>
                        </label>
                    </div>
                </div>
                <input type="hidden" asp-for="CreatedOnUtc" value="@Model.CreatedOnUtc" />
                <input type="hidden" asp-for="UpdatedOnUtc" value="@DateTime.UtcNow.AddHours(3)" />

                <div class="d-flex justify-content-end">
                    <input type="submit" class="btn btn-primary" value="@_localizer["Save"]" />
                    <a asp-action="Index" class="btn btn-secondary d-inline-block ml-3">@_localizer["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>