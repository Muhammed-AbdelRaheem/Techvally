@{
    ViewData["Title"] = "CONTACT US";
    ViewData["HomeBanner"] = "false";
}
@model HomePageVM
<div class="contact-us py-lg-70 py-20">
    <div class="contact container">
        <div class="row">
            <div class="col-lg-12 wow fadeIn" data-wow-duration="2s">
                <div class="reach-us">
                    <h2 class="title-down-internal">REACH US </h2>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d55251.33564057918!2d31.22344493519765!3d30.059558098303356!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14583fa60b21beeb%3A0x79dfb296e8423bba!2sCairo%2C%20Cairo%20Governorate!5e0!3m2!1sen!2seg!4v1633337060082!5m2!1sen!2seg" width="100%" height="511" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>

            <div class=" col-xl-6 col-lg-6 wow slideInLeft ">

                <partial name="_MessageForm" model="@(new MessageForm())" />


            </div>
            <div class="col-xl-6  col-lg-6 wow slideInRight ">

                <div class="info mt-lg-0 mt-50 ms-lg-50  md-lg-0 ms-0">
                    @if (Model != null && Model.contacts != null && Model.contacts.Any())
                    {
                        <div class="contact-info">
                            <h2 class="title-down mb-20">CONTACT INFO.</h2>
                            @foreach (var item in Model.contacts.Where(e => !e.Hidden))
                            {
                                <div class="office text-black">
                                    <h2>  @item.Title </h2>
                                    <h6> Address:   @Html.Raw(item.Address) </h6>
                                    <h6> Tel:    @Html.Raw(item.Tel) </h6>
                                    <h6> Fax:   @Html.Raw(item.Fax) </h6>

                                </div>


                            }


                        </div>


                    }
                    <img src="/images/front/patterl-blue.svg" alt="Alternate Text" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</div>