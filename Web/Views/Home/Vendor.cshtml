@using DataAccess.Services
@model PaginationVenderVM



@{
    ViewData["Title"] = "VENDORS";
    ViewData["HomeBanner"] = "false";
}
@if (Model != null && Model.vendors != null && Model.vendors.Any())

            {
<div class="vendors-page py-lg-70 py-20">
    <div class="container">
        <h2 class="title-down-internal">VENDORS</h2>
        <div class="row">
            @foreach (var item in Model.vendors.Where(e => !e.Hidden ))
            {
                <div class="col-lg-12 my-20 wow fadeIn" data-wow-delay="">
                    <div class="main-page d-flex justify-content-between p-lg-20 p-md-10 p-0">
                            <img src="@Config.AssetsDomain@item.Image" alt="Alternate Text" class="img-fluid col-lg-4" />
                            <div class="right-vendors ms-10 col-lg-4 m-auto me-0">
                            <h2>@item.Title</h2>
                            <div class="vendors-link my-10">
                                    <a href="@item.Url">
                                        <span > Website :  @item.Url </span>
                                   </a>
                            </div>
                             @Html.Raw(item.Description)
                        </div>
                    </div>
                </div>
            }
        </div>






        <nav aria-label="Page navigation example">
            <ul class="pagination my-lg-30 mb-30">
                <li class="page-item">

                </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="page-item"><a class="page-link" href="#">@i</a></li>

                        }
                        else
                        {
                            <a class="page-link" href="@Url.Action("Vendor", new { page = i })">@i</a>
                        }
                    }

                   


            </ul>
        </nav>




    </div>
</div>
}